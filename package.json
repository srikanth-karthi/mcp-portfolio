{
  "name": "@srikanth-karthi/srikanth-mcp-portfolio-server",
  "version": "1.4.0",
  "description": "MCP server for Srikanth's portfolio data",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "mcp-portfolio-server": "src/index.js"
  },
